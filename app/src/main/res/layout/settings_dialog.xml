<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:focusable="true"
    android:padding="8dp">

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/yekan"
        android:gravity="center"
        android:text="@string/settings"
        android:textColor="@color/dark_red"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notification_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/background_popup_textview"
        android:clickable="true"
        android:drawablePadding="8dp"
        android:fontFamily="@font/yekan"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:text="@string/notifications"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/ic_baseline_timer_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_title" />

    <TextView
        android:id="@+id/department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/background_popup_textview"
        android:clickable="true"
        android:drawablePadding="8dp"
        android:fontFamily="@font/yekan"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:text="@string/choose_department"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/ic_baseline_account_balance_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_time" />

    <TextView
        android:id="@+id/change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/background_popup_textview"
        android:clickable="true"
        android:drawablePadding="8dp"
        android:fontFamily="@font/yekan"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:text="@string/change_password"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/ic_baseline_lock_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/department" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/background_popup_textview"
        android:clickable="true"
        android:drawablePadding="8dp"
        android:fontFamily="@font/yekan"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:text="@string/logout"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/ic_baseline_exit_to_app_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_password" />

</androidx.constraintlayout.widget.ConstraintLayout>