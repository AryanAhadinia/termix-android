<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/round_rect_hover_login" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:width="1dip" android:color="#3366BB" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:width="1dip" android:color="#3366BB" />
        </shape>
    </item>
</selector>